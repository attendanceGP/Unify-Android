<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_ta_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_ta">
    <Spinner
        android:id="@+id/Courses"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:autofillHints="Courses"
        android:background="@drawable/curved_rectangle_text_holder"
        android:spinnerMode="dropdown"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="197dp"
        app:layout_constraintVertical_bias="0.357" />

    <EditText
        android:id="@+id/Groups"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:background="@drawable/curved_rectangle_text_holder"
        android:ems="10"
        android:hint="Groups"
        android:textColor="#000000"
        android:textColorHint="#D3D3D3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="278dp"
        />

    <Button
        android:id="@+id/RecordAttendance"
        android:layout_width="108dp"
        android:layout_height="47dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/curved_rectangle_button"
        android:textAppearance="@style/record_attendance"
        android:text="Start Attendance"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="359dp"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="unlabeled"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:menu="@menu/my_navigation_items" />

</RelativeLayout>

